<div class='col-md-6 col-md-offset-3'>
  <h1>新增MyProfile</h1>

  <%= simple_form_for @profile do |f| %>
    <%= f.input :gender, placeholder: '性別 (男,女)' %>
    <%= f.input :birth, start_year: Date.today.year - 80,
                              end_year: Date.today.year - 10 %>
    <%= f.input :height, placeholder: '身高 (cm)' %>
    <%= f.submit '儲存', class: 'btn btn-primary' %>
  <% end %>
</div>