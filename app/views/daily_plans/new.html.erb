<h1>新增今日計畫</h1>
<%= simple_form_for @daily_plan do |f| %>
  <%= f.input :daily_date, start_year: Date.today.year,
                          end_year: Date.today.year - 1  %>
  <%= f.input :weight, placeholder: '體重(kg)' %>
  <%= f.input :activity_rate, collection: {'躺著不動一整天': 1, 
                                          '幾乎很少或沒運動': 1.2,
                                          '每週運動到2次': 1.375,
                                          '每週運動3到5次': 1.55,
                                          '每週運動6到7次': 1.725,
                                          '每天重度運動或重勞力工作者': 1.9} %>
  <%= f.submit '新增', class: 'btn btn-primary' %>
<% end %>